{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 56, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)
    "modules-left": ["clock", "custom/apps", "wlr/taskbar", "hyprland/window"],
    "modules-center": ["hyprland/workspaces", "idle_inhibitor", "custom/screenshot", "custom/clipboardclear", "custom/wallpapers"],
    "modules-right": ["network", "pulseaudio", "pulseaudio#microphone", "memory", "disk", "temperature", "backlight", "battery", "tray", "custom/power"],
    "fixed-center": true,
    "mod": "dock",

    // Modules configuration
    
    "wlr/taskbar": {
    	"format": "{icon}",
	"spacaing": 0,
    	"icon-size": 18,
    	"icon-theme": "Papirus",
    	"on-click-middle": "close",
	"tooltip": true,
	"tooltip-format": "{title}",
	"max-length": 15,
	"ignore-list":[
        "rofi -  ",
        "rofi -  ",
        "rofi -  ",
        "rofi -  ",
        "rofi - dmenu"
	]
     },

     "hyprland/window": {
        "format": "  {}",
        "separate-outputs": true,
        "rewrite": {
	    "(.*)~": " 󰚺 ",
	    "(.*)rofi - dmenu": " 󰅍 ",
	    "(.*) - mpv": "  ",
	    "(.*)musicfox":  "  ",
	    "(.*)Ranger": "  "
        },
        "max-length": 20
     },

     "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
	    "urgent": "",
	    "active": "",		
	    "default": ""
        },
        "persistent-workspaces": {
    	    "*": 5
        }       
    },

    "custom/wallpapers": {
        "format": " ",
	"tooltip": false,
	"on-click": "bash /home/LK/.config/waybar/scripts/switcher.sh"
    },
    
    "idle_inhibitor": {
        "format": "{icon}",
	"tooltip": false,
        "format-icons": {
            "activated": "󰕥 ",
            "deactivated": "󰦝 "
        }
    },

    "tray": {
        "icon-size": 17,
        "spacing": 5
    }, 

    "clock": {
	"interval": 1,
        "timezone": "Asia/Chongqing",
	"format": "{:%H:%M:%S}",
	"tooltip": false,
	"format-alt": "{:%a %b·%d}"
    },

    "memory": {
        "format": "󰍛 ",
	"interval": 1,
	"tooltip-format": "{used}GiB"
    },

    "disk": {
	"format": "󰋊 ",
	"tooltip-format": "{used}",
	"interval": 1
    },

    "temperature": {
	"format": "{icon}",
	"format-icons": ["", "", "", "", ""],
	"interval": 1
    },

    "backlight": {
        "format": "{icon}",
	"tooltip": false,
        "format-icons": ["󰃞 ", "󰃝 ", "󰃟 ", "󰃠 "],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
	"tooltip-format": "{capacity}%",
        "format": "{icon}",
        "format-charging": "",
	"interval": 1,
        "format-icons": ["󰂎", "󰁼", "󰁿", "󰂁", "󰁹"]
    },

    "network": {
        "format-wifi": "󰤨  {essid}",
        "format-ethernet": "  Wired",
        "tooltip-format": " {bandwidthUpBytes}  {bandwidthDownBytes}",
        "format-linked": "󱘖 {ifname} (No IP)",
        "format-disconnected": "  Disconnected",
        "format-alt": "󰤨  {signalStrength}%",
        "interval": 1
    },

    "pulseaudio": {
        "format": "{icon}{volume}",
        "format-muted": "󰖁 0",
        "format-icons": {
            "headphone": " ",
            "hands-free": " ",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": [" ", " ", " "]
        },
        "on-click-right": "pavucontrol -t 3",
        "on-click": "pactl -- set-sink-mute 0 toggle",
	"tooltip": false,
	"on-scroll-up": "pactl -- set-sink-volume 0 +1%",
	"on-scroll-down": "pactl -- set-sink-volume 0 -1%"
    }, 

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": " {volume}",
        "format-source-muted": " 0",
        "on-click-right": "pavucontrol -t 4",
        "on-click": "pactl -- set-source-mute 0 toggle",
	"tooltip": false,
	"on-scroll-up": "pactl -- set-source-volume 0 +1%",
	"on-scroll-down": "pactl -- set-source-volume 0 -1%"
    },

    "custom/power": {
        "format": "  ",
        "on-click": "wlogout -b 6",
        "interval": 86400, // once every day
        "tooltip": false
    },

    "custom/screenshot": {
        "format": "󰹑 ",
	    "on-click": "grimblast --notify save",
	    "on-click-right": "grimblast --notify save active",
	    "tooltip": false
    },

    "custom/clipboardclear": {
        "format": "󰃢 ",
	    "on-click": "bash /home/LK/.config/waybar/scripts/clipboardclear.sh",
	    "tooltip": false
    },

    "custom/apps": {
        "format": "Apps",
        "on-click": "rofi -show drun -normal-window",
        "tooltip": false
    }
}

